<body>
  <div class="container">
    <h1>Task Manager</h1>
    <p>Welcome to your app to manage you daily tasks</p>
    <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.title, task_path(task) %> <%= link_to "remove", task_path(task), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-secondary" %></li>
        
      <% end %>
    </ul>
    <hr>
    <%= link_to "+ Add new task", new_task_path %>
  </div>
</body>
